</head>
<body>
	<div class="top">
		<form class="example" action="account">
	  		 <input type="text" id="myInput" onkeyup="myFunctionSearch()" placeholder="Search for items.." title="Type in a name">
	  		 <button id="account" class="account" onclick="window.location.href = 'account';"><i class="fa fa-user" aria-hidden="true"></i></button>
<!-- 	  		 <button type = "button" class="search" onclick="myFunctionShow()"><i class="fa fa-search"></i></button>
 -->		</form>
		<div class="dropdown"> 
		  <button class="dropbtn"><i class="fa fa-bars" aria-hidden="true"></i></button>
		  <div class="dropdown-content">
		  	  <a>Sort By:</a>
			  <a onclick="sortNew()">Date Posted (Newest)</a>
			  <a onclick="sortOld()" >Date Posted (Oldest)</a>
	 	  </div>
		</div>
			<div class="bottom">
				<div class="lost-padding">
	 				<button id="lost" class="lost" onclick="switchFtoL()">Lost</button>
	 			</div>
	 			<div class="found-padding">
					<button id="found" class="found" onclick="switchLtoF()">Found</button>
				</div>
			</div>
			<div class="bottom-padding">
			</div>
	</div>
	<div class="post">
		{{#each posts}}
		   <div class="individual" id="{{id}}">
		   	  <p id="moreText" style="padding:10px;">{{date}}</p>
		      <img src="{{image}}" class="img-responsive">
		      <h1 style="padding:10px;">{{name}}</h1>
		      <a href = "tel:{{contact}}" style= "padding:10px;">Phone number: {{contact}}</a>
		      <p style="padding:10px;">Description: {{description}}</p>
		      <!-- Add contact info -->
            <span id="moreText" style="padding:10px;"><p>Last Seen: {{lastseen}}</p><p>Date: {{date}}</p></span>

            <button class="more"><i class="fa fa-angle-down"></i></button>
		   </div>
		{{/each}}
	</div>
	<div class="middle">
		<button class="plus" onclick="window.location.href = 'post';"><i class="fa fa-plus" aria-hidden="true"></i>     New Post</button>
<!-- 	<button id="account" class="account" onclick="window.location.href = 'account';"><i class="fa fa-user" aria-hidden="true"></i></button> -->
	</div>
</body>

</html>


